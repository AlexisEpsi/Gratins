{% extends 'base.html.twig' %}

{% block title %}Edit Recette{% endblock %}

{% block body %}
    <h1>Edit Recette</h1>

    {{ form_start(form) }}
    <div>
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
        {{ form_errors(form.nom) }}
    </div>

    <div>
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
    </div>

    <div>
        {{ form_label(form.duree) }}
        {{ form_widget(form.duree) }}
        {{ form_errors(form.duree) }}
    </div>

    <div>
        {{ form_label(form.personnes) }}
        {{ form_widget(form.personnes) }}
        {{ form_errors(form.personnes) }}
    </div>

    <div>
        {{ form_label(form.image) }}
        {{ form_widget(form.image) }}
        {{ form_errors(form.image) }}
    </div>

    <div>
        {% for ingredient in ingredients %}
            <div class="flex items-center space-x-4">
                <label class="block text-sm font-medium text-gray-700">{{ ingredient.nom }}</label>
                <input type="number" name="newQuantites[{{ ingredient.id }}]" id="newQuantites[{{ ingredient.id }}]" value="{{ quantites[loop.index0] ?? 0 }}" min="0" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500">
            </div>
        {% endfor %}
    </div>

    <button type="submit">
        {{ button_label|default('Update') }}
    </button>
    {{ form_end(form) }}
    

    <a href="{{ path('app_recette_index') }}">back to list</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
